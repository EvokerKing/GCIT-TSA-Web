---
interface Props {
	href?: string
}
const { href = "" } = Astro.props
---

<a href={href}><slot /></a>

<style>
	a {
		color: #FFFFFF;
		text-decoration: none;
		font-size: 16px;
		line-height: 22px;
	}
	
	a:hover {
		text-decoration: underline;
	}

	@media (width < 400px) {
		a {
			font-size: 14px;
			line-height: 18px;
		}
	}
</style>