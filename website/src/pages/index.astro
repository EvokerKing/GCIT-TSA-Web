---
import Layout from "../layouts/Layout.astro"
import Button from "../components/Button.astro"
---

<Layout title="GCIT TSA">
	<main>
		<p>Welcome to the official GCIT TSA Website!</p>
		<Button href="/about">
			About us
			<svg id="icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 32 32" style="fill: #FFFFFF">
				<defs>
					<style>
						.cls-1 {
							fill: none;
						}
					</style>
				</defs>
				<polygon points="18 6 16.57 7.393 24.15 15 4 15 4 17 24.15 17 16.57 24.573 18 26 28 16 18 6"/>
				<rect id="_Transparent_Rectangle_" data-name="&lt;Transparent Rectangle&gt;" class="cls-1" width="16" height="16"/>
			</svg>
		</Button>
		<div style="margin-top: 64px;">
			<div>
				<h1>Competitions</h1>
				<p>The list of TSA Competitions and information about them</p>
			</div>
			<Button href="/comp">
				Competitions
				<svg id="icon" xmlns="http://www.w3.org/2000/svg" style="fill: #FFFFFF" width="16" height="16" viewBox="0 0 32 32">
					<defs>
						<style>
							.cls-1 {
								fill: none;
							}
						</style>
					</defs>
					<polygon points="18 6 16.57 7.393 24.15 15 4 15 4 17 24.15 17 16.57 24.573 18 26 28 16 18 6"/>
					<rect id="_Transparent_Rectangle_" data-name="&lt;Transparent Rectangle&gt;" class="cls-1" width="16" height="16"/>
				</svg>
			</Button>
		</div>
		<div>
			<div>
				<h1>Contact Us</h1>
				<p>Contact GCIT TSA for any reason</p>
			</div>
			<Button href="/comp">
				Contact
				<svg id="icon" xmlns="http://www.w3.org/2000/svg" style="fill: #FFFFFF" width="16" height="16" viewBox="0 0 32 32">
					<defs>
						<style>
							.cls-1 {
								fill: none;
							}
						</style>
					</defs>
					<polygon points="18 6 16.57 7.393 24.15 15 4 15 4 17 24.15 17 16.57 24.573 18 26 28 16 18 6"/>
					<rect id="_Transparent_Rectangle_" data-name="&lt;Transparent Rectangle&gt;" class="cls-1" width="16" height="16"/>
				</svg>
			</Button>
		</div>
	</main>

	<style>
		main {
			width: 100%;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			padding: 48px;
			box-sizing: border-box;
		}
		
		main > div {
			background: #414141;
			display: flex;
			flex-direction: column;
			align-items: end;
			margin-bottom: 8px !important;
			width: 800px;
		}

		div > div {
			width: 100%;
		}

		div > h1 {
			font-size: 42px;
			margin: 0;
			width: 100%;
			padding: 8px 16px 2px 12px;
			box-sizing: border-box;
		}

		div > p {
			font-size: 24px;
			margin: 0;
			width: 100%;
			padding: 2px 16px 8px 12px;
			box-sizing: border-box;
		}

		main > p {
			font-size: 54px;
			text-align: center;
			margin: 8px;
		}

		@media (width < 1000px) {
			main > div {
				width: 100%;
				margin: 0 32px;
			}
		}

		@media (width < 400px) {
			main {
				padding: 32px;
			}

			main > p {
				font-size: 36px;
			}

			div > h1 {
				font-size: 28px;
			}

			div > p {
				font-size: 18px;
			}
		}
	</style>
</Layout>